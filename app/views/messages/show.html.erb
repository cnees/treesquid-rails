<%= content_tag "div", id: "conversation", data: {conversation: @conversation, root: @root} do %>
<% end %>

<div id="cy" style="position:absolute;left:10px;top:10px;width:calc(100% - 140px);height:calc(100% - 20px);"></div>
<div id="right-sidebar" style="height:100%;position:absolute;top:0px;right:0px;width:120px;border-left:3px solid #5E1C1D;background:#EFEFEF;">
 

  <ul id="roots">
    <% @roots.each do |root| %>
      <a href="/messages/<%= root.id %>"><li><%= root.text %></li></a>
    <% end %>
  </ul>
  <br> 
  <ul id="users">
    <% @users.each do |user| %>
      <li data-id="<%= user.user_id %>"><%= user.username %></li>
    <% end %>
  </ul>
  <br>

</div>